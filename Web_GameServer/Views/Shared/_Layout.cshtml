<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/scripts/jquery-3.3.1.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
    

    <link rel="stylesheet" href="/Content/style.css" />


</head>
<body>
    
    
<div class="karkas">
    <div class="header">
        <a href="/"><img class="logo" src="/Images/logo.PNG"></a>
        <div class="header-user">
            <a href="#"><img class="img-event" src="/Images/event.PNG" alt=""></a>
            <a href="#"><img class="img-user" src="/Images/icon.png"></a>
            <a href="#" class="admin-text">Admin</a>
        </div>
                
    </div>
    <div class="sidebar">
        <ul>
            <li><a href="@Url.Action("Index", "Home")">Статус</a></li>
            <li>@Ajax.ActionLink("Игры", "Games", new AjaxOptions(){UpdateTargetId = "cont-update"})</li>
            <li>@Ajax.ActionLink("Пользователи", "Users", new AjaxOptions() { UpdateTargetId = "cont-update" })</li>
            <li>@Ajax.ActionLink("Настройки", "Setting", new AjaxOptions() { UpdateTargetId = "cont-update" })</li>
            <li><a href="#">О сервере</a></li>
        </ul>
              
    </div>
    <div class="content">
        <div class="container" id="cont-update">
            @RenderBody()
        </div>
    </div>

    

</div>


    
    @RenderSection("scripts", required: false)
    <script src="/Scripts/Chart.js"></script>
    <script src="/Scripts/Script.js"></script>

</body>
</html>
